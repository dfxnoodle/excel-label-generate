# Nginx configuration example for Label Generator
# Place this file in /etc/nginx/sites-available/ and create a symlink to sites-enabled/

upstream label_generator {
    # Unix socket backend
    server unix:/tmp/label-generator.sock fail_timeout=0;
}

server {
    listen 80;
    listen [::]:80;
    
    # Replace with your domain name
    server_name label-generator.example.com;
    
    # Maximum upload size (adjust as needed for Excel files)
    client_max_body_size 50M;
    
    # Logging
    access_log /var/log/nginx/label-generator-access.log;
    error_log /var/log/nginx/label-generator-error.log;
    
    # Serve static files directly
    location /static {
        alias /path/to/excel-label-generate/static;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
    
    # Proxy all other requests to the application
    location / {
        proxy_pass http://label_generator;
        
        # Proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (if needed in future)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts for long-running requests (PDF generation)
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
    }
}

